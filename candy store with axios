  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
    crossorigin="anonymous"
  ></script>
  <script src="https://cdn.jsdelivr.net/npm/axios@1.1.2/dist/axios.min.js"></script>
  <script>
    var namea = document.getElementById("name");
    var desca = document.getElementById("desc");
    var pria = document.getElementById("pri");
    var qnta = document.getElementById("qnt");
    var divv = document.querySelector(".boxx");
    var candy =
      "https://crudcrud.com/api/43b7336c0fbf47f5b445ea4f9bc7dc71/candy";
    document.querySelector("#addForm").addEventListener("submit", addcan);
    window.addEventListener("DOMContentLoaded", () => {
      pageLoader();
    });
    function pageLoader() {
      axios.get(candy).then((res) => {
        res.data.forEach((element) => {
          var showsdetailsa = document.createElement("h3");
          var div1 = document.createElement("div");
          var buy1 = document.createElement("input");
          var buy2 = document.createElement("input");
          var buy3 = document.createElement("input");

          buy1.type = "button";
          buy1.classList = "btn bg-danger btn-lg buy1 ";
          buy1.value = "Buy 1";

          buy2.type = "button";
          buy2.classList = "btn bg-danger btn-lg buy2 ";
          buy2.value = "Buy 2";

          buy3.type = "button";
          buy3.classList = "btn bg-danger btn-lg buy3 ";
          buy3.value = "Buy 3";

          var boxxa = document.querySelector(".boxx");
          var out =
            element._id +
            " - " +
            element.name +
            " - " +
            element.description +
            " - " +
            element.price +
            " - " +
            element.quantity+" - ";
          out = out.toString();
          showsdetailsa.innerHTML = out;
          boxxa.appendChild(div1);
          div1.appendChild(showsdetailsa);
          div1.appendChild(buy1);
          div1.appendChild(buy2);
          div1.appendChild(buy3);
          buy1.addEventListener("click",sold1);
          buy2.addEventListener("click",sold2);
          buy3.addEventListener("click",sold3);

        });
      });
    }

    function addcan(e) {
      e.preventDefault();
      var myobj = {
        name: namea.value,
        description: desca.value,
        price: pria.value,
        quantity: qnta.value,
      };
      const config = {
        method: "POST",
        url: candy,
        data: myobj,
      };
      axios(config)
        .then((res) => {
          while (divv.firstChild) {
            divv.removeChild(divv.firstChild);
          }
          axios.get(candy).then((res) => {
            res.data.forEach((element) => {
              var showsdetailsa = document.createElement("h3");
              var div1 = document.createElement("div");
              var buy1 = document.createElement("input");
              var buy2 = document.createElement("input");
              var buy3 = document.createElement("input");

              buy1.type = "button";
              buy1.classList = "btn bg-danger btn-lg buy1";
              buy1.id = "buy1";
              buy1.value = "Buy 1";

              buy2.type = "button";
              buy2.classList = "btn bg-danger btn-lg buy2";
              buy2.value = "Buy 2";

              buy3.type = "button";
              buy3.classList = "btn bg-danger btn-lg buy3";
              buy3.value = "Buy 3";

              var boxxa = document.querySelector(".boxx");
              var out =
                element._id +
                " - " +
                element.name +
                " - " +
                element.description +
                " - " +
                element.price +
                " - " +
                element.quantity +
                " - ";
              out = out.toString();
              showsdetailsa.innerHTML = out;
              boxxa.appendChild(div1);
              div1.appendChild(showsdetailsa);
              div1.appendChild(buy1);
              div1.appendChild(buy2);
              div1.appendChild(buy3);
              buy1.addEventListener("click",sold1);
          buy2.addEventListener("click",sold2);
          buy3.addEventListener("click",sold3);
            });
          });
        })
        .catch((err) => {
          console.log(err);
        });
    }
    function sold1(e) {
      var li = e.target.parentElement;
      var inputt = li.firstChild;
      inputt = inputt.textContent;
      var arr = [];
      var str = "";
      for (var i = 0; i < inputt.length; i++) {
        if (inputt[i] == " ") {
        } else if (inputt[i] == "-") {
          arr.push(str);
          str = "";
        } else {
          str += inputt[i];
        }
      }
      if (arr[4] < 1) {
        alert("quantity is less");
      } else {
        var myobj = {
          name: arr[1],
          description: arr[2],
          price: arr[3],
          quantity: arr[4] - 1,
        };
        let config = {
          method: "PUT",
          url: candy + "/" + arr[0],
          data: myobj,
        };
        axios(config)
          .then((res) => {
            while (divv.firstChild) {
              divv.removeChild(divv.firstChild);
            }
            axios.get(candy).then((res) => {
              res.data.forEach((element) => {
                var showsdetailsa = document.createElement("h3");
                var div1 = document.createElement("div");
                var buy1 = document.createElement("input");
                var buy2 = document.createElement("input");
                var buy3 = document.createElement("input");

                buy1.type = "button";
                buy1.classList = "btn bg-danger btn-lg buy1";
                buy1.id = "buy1";
                buy1.value = "Buy 1";

                buy2.type = "button";
                buy2.classList = "btn bg-danger btn-lg buy2";
                buy2.value = "Buy 2";

                buy3.type = "button";
                buy3.classList = "btn bg-danger btn-lg buy3";
                buy3.value = "Buy 3";

                var boxxa = document.querySelector(".boxx");
                var out =
                  element._id +
                  " - " +
                  element.name +
                  " - " +
                  element.description +
                  " - " +
                  element.price +
                  " - " +
                  element.quantity+" - ";
                out = out.toString();
                showsdetailsa.innerHTML = out;
                boxxa.appendChild(div1);
                div1.appendChild(showsdetailsa);
                div1.appendChild(buy1);
                div1.appendChild(buy2);
                div1.appendChild(buy3);
                buy1.addEventListener("click",sold1);
          buy2.addEventListener("click",sold2);
          buy3.addEventListener("click",sold3);
              });
            });
          })
          .catch((err) => {
            console.log(err);
          });
      }
    }
    function sold2(e) {
      var li = e.target.parentElement;
      var inputt = li.firstChild;
