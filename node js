const http=require('http');
http.createServer((req,res)=>{
    const url = req.url;
    if(url==='/home'){
        res.write('<html><title>Home</title><body><h1> Welcome home</h1></body></html>');
        return res.end();
    }
    else if(url==='/about'){
        res.write('<html><title>About us</title><body><h1> Welcome to About Us page</h1></body></html>');
        return res.end();
    }
    else if(url==='/node'){
        res.write('<html><title>Node</title><body><h1> Welcome to my Node Js project</h1></body></html>');
        return res.end();
    }
    
}).listen(4000)
